html 
    head 
        link(rel="stylesheet", href="/output.css")
        link(
            href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
            rel="stylesheet")
        title=data.title 
    body(class="bg-gray-900 text-white h-full")
        div(class="grid grid-cols-2 gap-8 max-w-4xl mx-auto mt-28")
            div
                 img(src=`https://image.tmdb.org/t/p/w500/${data.poster_path}`, alt="", class="w-full h-full object-cover rounded-[10px]")
            div
                h1(class="font-extrabold text-[30px]")=data.title
                p(class="text-gray-800 mt-4")=data.vote_average 
                    span
                     i(class="bx bxs-star text-yellow-600 ml-[20px]")
                p(class="text-orange-700 mt-4 font-semibold")=data.overview
            